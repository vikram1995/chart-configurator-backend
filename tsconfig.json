{
  "compilerOptions": {
    "target": "ES2020",  // Set the target to ES2020 or above for ES Module support
    "module": "ESNext",  // Use ESNext module system
    "moduleResolution": "node",  // Enable module resolution using Node.js
    "outDir": "./dist",  // Output compiled files to the 'dist' folder
    "esModuleInterop": true,  // Allow default import for CommonJS modules
    "strict": true,  // Enable strict type checking options
    "skipLibCheck": true,  // Skip library checks for faster builds
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],  // Only compile files in the 'src' folder
  "exclude": ["node_modules"]
}
